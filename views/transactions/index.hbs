<section class="dashboard">
  <div class="dashboardHeader">
    <h1>Welcome to your Dashboard</h1>
    <a href="#" class="button setGoalButton">Set Goal</a>
  </div>
  <section class="dashboardContent">
    <section class="dashboardTableWrapper">
      <h2>Records</h2>
      <div class="tableOptions">
        <label class="me-2">Sort By:</label>
        <button class="sortButton">Month</button>
        <button class="sortButton">Year</button>
        <button class="sortButton">Transaction Type</button>
        <div class="dashboardButtonContainer">
          <a href="/transactions/create" class="dashboardAddButton"><i class="bi bi-plus-circle"></i> Add
            Transaction</a>
        </div>
      </div>

      <table class="table dashboardTable">
        <thead>
          <tr>
            <th>Transaction Type</th>
            <th>Name</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each transactions}}
          <tr>
            <td>{{type}}</td>
            <td>{{name}}</td>
            <td>{{amount}}</td>
            <td>{{date}}</td>
            <td>{{description}}</td>
            <td><a href="/transactions/edit/{{_id}}" class="dashboardEditButton dashboardManageButtons"><i
                  class="bi bi-pencil"></i></a></td>
            <td><a href="/transactions/delete/{{_id}}" class="dashboardDeleteButton dashboardManageButtons"
                onclick="return confirm('Are you sure you want to delete this?');"><i class="bi bi-x"></i></a></td>
            {{/each}}
        </tbody>
        </tr>
      </table>

    </section>

    <section class="dashboardSummary">
      <h2 class="text-center">Summary</h2>
      <p>Total Earned: $<span id="totalIncome">{{totalIncome}}</span></p>
      <p>Total Spent: $<span id="totalExpense">{{totalExpense}}</span></p>
      <p class="text-center">You are $<span id=""></span> your goal</p>
    </section>

  </section>
</section>
