<section class="crudSectionWrapper">
    <h1 class="text-center pb-4">Create New Transaction Record</h1>
    <form class="crudForm p-4" method="post">
        <fieldset class="row mb-3">
            <div class="col-md-6">
                <label for="type" class="form-label">Type:</label>
                <select id="type" class="form-select" name="type">
                    <option value="Expense">Expense</option>
                    <option value="Income">Income</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control" name="name" required>
            </div>
        </fieldset>

        <fieldset class="row mb-3">
            <div class="col-md-6">
                <label for="amount" class="form-label">Amount:</label>
                <input type="number" id="amount" class="form-control" min="1" name="amount" required>
            </div>
            <div class="col-md-6">
                <label for="date" class="form-label">Date:</label>
                <input type="date" id="date" class="form-control" name="date" required>
            </div>
        </fieldset>

        <fieldset class="row mb-3">
            <div class="col">
                <label for="description" class="form-label">Description:</label>
                <textarea id="description" class="form-control" name="description"></textarea>
            </div>
        </fieldset>

        <div class="formButtonWrapper">
            <button type="submit" class="button mb-2">Create Transaction</button>
        </div>
    </form>
</section>
